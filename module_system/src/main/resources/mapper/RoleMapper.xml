    <select id="findByUserId" resultType="com.mornd.system.entity.po.SysRole">
        SELECT
            id,
            code,
            `name`,
            enabled
        FROM
            sys_role sr
        WHERE
            sr.enabled = #{enableState}
        AND sr.id IN(
        SELECT
            role_id
        FROM
            sys_user_role sur
        WHERE
            user_id = #{userId}
        )
    </select>
    
    <select id="getPersById" resultType="java.lang.String">
        SELECT
            srp.per_id
        FROM
            sys_role_permission srp
        WHERE
            role_id = #{id}
            AND (
            SELECT
                count(1)
            FROM
                sys_permission sp
            WHERE
                sp.id = srp.per_id
                AND sp.hidden = #{hidden}) > 0
    </select>
</mapper>
